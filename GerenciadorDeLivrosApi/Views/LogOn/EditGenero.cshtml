@model GerenciadorDeLivrosApi.Models.Genero
@Scripts.Render("~/Scripts/Views/LogOn.js")
<script>
</script>
<div class="container body-content" style="margin-top: 5%">
	<div id="body">
		<form class="form-horizontal col-md-offset-3">
			<div class="form-group">
				<label class="col-sm-2 control-label">Gênero </label>
				<div class="col-sm-10">
					<input type="text" class="form-control" id="inputGeneroDescri" placeholder="Gênero de Livro" maxlength="50" value="@Model.Descricao">
				</div>
			</div>
			@if (Model.Id <= 0)
			{
				<div class="form-group">
					<div class="col-sm-offset-2 col-sm-10">
						<button type="button" class="btn btn-default" onclick="RegisterGenero()">Cadastrar</button>
					</div>
				</div>
			}
			else
			{
				@Html.HiddenFor(model => model.Id)
				<div class="form-group">
					<div class="col-sm-offset-2 col-sm-10">
						<button type="button" class="btn btn-default" onclick="SaveGenero()">Salvar</button>
					</div>
				</div>
			}
		</form>
	</div>

</div>
